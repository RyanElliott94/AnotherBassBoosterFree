<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="#000">


    <SeekBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/volumeText"
        android:layout_marginBottom="45dp"
        android:progress="100"
        android:progressDrawable="@drawable/seekbar_progress"
        android:rotation="270"
        android:thumb="@null" />


    <TextView
        android:id="@+id/volumeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardLayout"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/quicksand_bold"
        android:text=""
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="395dp"
        android:layout_height="324dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="370dp"
            android:layout_height="300dp"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:elevation="30dp"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/bass_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bassText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Bass Boost"
                    android:textColor="#3D3D3D"
                    android:textSize="35sp" />

                <SeekBar
                    android:id="@+id/bassSeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/bass_volume_seek"
                    android:thumb="@drawable/seek_handler" />

                <TextView
                    android:id="@+id/volText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Volume"
                    android:textColor="#3D3D3D"
                    android:textSize="35sp" />

                <SeekBar
                    android:id="@+id/volumeSeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    android:progressDrawable="@drawable/bass_volume_seek"
                    android:thumb="@drawable/seek_handler">
                </SeekBar>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-7041676438054720/9061826498" />
</RelativeLayout>
